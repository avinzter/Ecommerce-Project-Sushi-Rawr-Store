<h2>Review</h2>

<%= form_for @customer do |f| %>
  <div>
    <%= f.label :first_name %> <br>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %> <br>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :address %> <br>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :city %> <br>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :province %> <br>
    <%= f.text_field :province %>
  </div>
  <div>
    <%= f.submit 'Create Account' %>
  </div>

<% end %>